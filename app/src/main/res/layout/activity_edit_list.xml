<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nick.randomize.EditList">

    <!-- title and editing -->
    <RelativeLayout
        android:id="@+id/titleBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/listTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="25sp"
            />

        <ImageButton
            android:id="@+id/titleEdit"
            android:src="@drawable/ic_action_edit"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="5dp"/>

    </RelativeLayout>

    <!-- the list -->
    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/listeditview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/newitem"
        android:layout_below="@id/titleBox"
        android:transcriptMode="alwaysScroll"
        android:stackFromBottom="false" />


    <!-- add item -->
    <LinearLayout
        android:id="@+id/newitem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/newitemtext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/new_item_hint" />

        <Button
            android:id="@+id/newitemsave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="@string/new_item_save"
            android:onClick="addItem"/>

    </LinearLayout>

</RelativeLayout>
